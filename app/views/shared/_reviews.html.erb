    <div class="row">
      <div class="col-md-12">
        <h2 class="title">Avis</h2>
        <div class="separator-2"></div>
        <!-- comments start -->
        <div class="comments margin-clear space-top">
          <!-- comment start -->
          <% product.reviews.each do |review| %>
