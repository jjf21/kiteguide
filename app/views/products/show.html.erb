

<!-- main start -->
<!-- ================ -->
<div class="main col-md-12">

  <!-- page-title start -->
  <!-- ================ -->
  <h1 class="page-title text-center"><%= @product.brand.name.capitalize %> <%= @product.model.capitalize %> <%= @product.year %></h1>
  <!-- page-title end -->

  <div class="row">
    <div class="col-md-4 col-lg-5">
      <!-- pills start -->
      <!-- ================ -->
      <!-- Nav tabs -->
      <ul class="nav nav-pills" role="tablist">
        <li class="active"><a href="#pill-1" role="tab" data-toggle="tab" title="images"><i class="fa fa-camera pr-5"></i> Photo</a></li>
        <li><a href="#pill-2" role="tab" data-toggle="tab" title="video"><i class="fa fa-video-camera pr-5"></i> Video</a></li>
      </ul>
      <!-- Tab panes -->
      <div class="tab-content clear-style">
        <div class="tab-pane active" id="pill-1">
          <div class="owl-carousel content-slider-with-thumbs mb-20">
            <div class="overlay-container overlay-visible">
              <img src="images/product-1.jpg" alt="">
              <a href="images/product-1.jpg" class="owl-carousel--popup-img overlay-link" title="image title"><i class="icon-plus-1"></i></a>
            </div>
            <div class="overlay-container overlay-visible">
              <img src="images/product-1-2.jpg" alt="">
              <a href="images/product-1-2.jpg" class="owl-carousel--popup-img overlay-link" title="image title"><i class="icon-plus-1"></i></a>
            </div>
            <div class="overlay-container overlay-visible">
              <img src="images/product-1-3.jpg" alt="">
              <a href="images/product-1-3.jpg" class="owl-carousel--popup-img overlay-link" title="image title"><i class="icon-plus-1"></i></a>
            </div>
            <div class="overlay-container overlay-visible">
              <img src="images/product-1-4.jpg" alt="">
              <a href="images/product-1-4.jpg" class="owl-carousel--popup-img overlay-link" title="image title"><i class="icon-plus-1"></i></a>
            </div>
          </div>
          <div class="content-slider-thumbs-container">
            <div class="owl-carousel content-slider-thumbs">
              <div class="owl-nav-thumb">
                <img src="images/product-1.jpg" alt="">
              </div>
              <div class="owl-nav-thumb">
                <img src="images/product-1-2.jpg" alt="">
              </div>
              <div class="owl-nav-thumb">
                <img src="images/product-1-3.jpg" alt="">
              </div>
              <div class="owl-nav-thumb">
                <img src="images/product-1-4.jpg" alt="">
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane" id="pill-2">
          <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="https://player.vimeo.com/video/230755847?color=00cc99"></iframe>
          </div>
        </div>
      </div>
      <!-- pills end -->
      <hr class="mb-10">
      <div class="clearfix mb-20">
        <span>
          <i class="fa fa-star text-default"></i>
          <i class="fa fa-star text-default"></i>
          <i class="fa fa-star text-default"></i>
          <i class="fa fa-star text-default"></i>
          <i class="fa fa-star"></i>
        </span>
        <a href="#" class="wishlist"><i class="fa fa-heart-o pl-10 pr-5"></i>Wishlist</a>
        <ul class="pl-20 pull-right social-links circle small clearfix margin-clear animated-effect-1">
          <li class="twitter"><a target="_blank" href="http://www.twitter.com"><i class="fa fa-twitter"></i></a></li>
          <li class="googleplus"><a target="_blank" href="http://plus.google.com"><i class="fa fa-google-plus"></i></a></li>
          <li class="facebook"><a target="_blank" href="http://www.facebook.com"><i class="fa fa-facebook"></i></a></li>
        </ul>
      </div>
    </div>
    <div class="col-md-8 col-lg-7 pv-30">
      <h2>Description</h2>
      <p><%= @product.description %></p>
      <h4 class="space-top">Specifications</h4>
      <hr>
      <dl class="dl-horizontal">
        <dt>Marque</dt>
        <dd><%= link_to @product.brand.name.capitalize, brand_path(@product.brand) %></dd>
        <dt>Model</dt>
        <dd><%= @product.model %></dd>
        <dt>Ann√©e</dt>
        <dd><%= @product.year %></dd>
        <dt>Taille</dt>
        <dd>.....</dd>
        <dt>Programme</dt>
        <dd>.....</dd>
        <dt>Nombre de latte</dt>
        <dd>...</dd>
      </dl>
    </div>
  </div>
</div>
<% content_for :section do %> 
  <%= render 'shared/reviews' %>
<% end %>
<!-- main end -->
